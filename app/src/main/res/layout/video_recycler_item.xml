<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/video_cover_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fragment__internetlog_recycler_item_iamgeview"
            android:layout_width="168dp"
            android:layout_height="96dp"
            android:background="@drawable/grsm"/>
        <ImageView
            android:layout_width="32.7dp"
            android:layout_height="32.7dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_content_22"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/fragment__internetlog_recycler_item_textview"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="全球能源互联网：2017年能源行业分析"
        android:layout_marginTop="10dp"
        android:textColor="#FF000000"
        android:layout_below="@+id/video_cover_layout"
        android:textSize="14sp"/>

</RelativeLayout>