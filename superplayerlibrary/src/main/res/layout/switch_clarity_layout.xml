<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/switch_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
    android:background="#aa000000">
    <TextView
        android:id="@+id/low_clarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/middle_clarity"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:text="流畅(320P)"/>
    <TextView
        android:id="@+id/middle_clarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:text="标清(320P)"/>
    <TextView
        android:id="@+id/high_clarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/middle_clarity"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text="高清(480P)"/>

</RelativeLayout>
